disk_config disk1 disklabel:msdos bootable:1 fstabkey:uuid align-at:1M

primary	/boot	50M		ext2	rw
primary	-		3G		-		-
primary	/		0-		ext3	rw,relatime,errors=remount-ro createopts="-L ROOT -m 5" tuneopts="-c 0 -i 0"

disk_config lvm
vg os		sda3
os-var		/os/var 	100- 	ext3 	rw,noatime,nosuid createopts="-m 2 -L data"

