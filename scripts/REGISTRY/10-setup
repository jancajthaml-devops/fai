#!/bin/bash

#mkdir -p /var/www/repos/apt/debian
#cp /etc/apache2/sites-available/000-default.conf /etc/apache2/sites-available/000- debian.conf

echo "A"

temp_file=$(mktemp)

echo "B"

cat >$temp_file <<EOF
     %echo Generating a basic OpenPGP key
     Key-Type: DSA
     Key-Length: 1024
     Subkey-Type: ELG-E
     Subkey-Length: 1024
     Name-Real: Registry
     Expire-Date: 0
     Passphrase: changeit
     %commit
     %echo done
EOF


sed -i 's/changeid/'${ROOTPW}'/' $temp_file

echo "C"

gpg --batch --generate-key registry

echo "D"

rm -f $temp_file

echo "E"

#$key_id=$(gpg --list-keys --keyid-format=short registry | grep pub | grep -o -P '(?<=/)[A-Z0-9]{8}' | head -1)

gpg --armor --output /var/www/repos/apt/Debian/dbr.gpg.key --export repository

echo "F"


#reprepro export

