#!/bin/bash

error=0; trap 'error=$(($?>$error?$?:$error))' ERR # save maximum error code

$ROOTCMD gpg --list-keys

mkdir -p $target/var/www/repos/apt/debian/conf

cat >$target/var/www/repos/apt/debian/conf/override.dbr <<EOF
     dbr Priority optional
     dbr Section net
EOF

cat >$target/var/www/repos/apt/debian/conf/distributions <<EOF
     Origin: OS-64
     Label: dbr_5.2
     Codename: dbr
     Architectures: amd64 arm64
     Components: main
     Description: OS-64 REGISTRY
     SignWith:
     DebOverride: override.dbr
EOF

cat >$target/registry <<EOF
     %echo Generating a basic OpenPGP key
     Key-Type: DSA
     Key-Length: 1024
     Subkey-Type: ELG-E
     Subkey-Length: 1024
     Name-Real: Registry
     Expire-Date: 0
     Passphrase:
     %commit
     %echo done
EOF
sed -ie 's/Passphrase:/Passphrase: '${ROOTPW}'/' $target/registry

$ROOTCMD gpg --batch --generate-key registry

rm -f $target/registry $target/registrye

key_id=$($ROOTCMD gpg --list-keys --keyid-format=short registry | grep pub | grep -o -P '(?<=/)[A-Z0-9]{8}' | head -1)

echo "0"

cat $target/var/www/repos/apt/debian/conf/override.dbr

echo "1"

cat $target/var/www/repos/apt/debian/conf/distributions

echo "2"

gpg --armor --output $target/var/www/repos/apt/debian/registry.gpg.key --export $key_id

reprepro -b $target/var/www/repos/apt/debian export

exit $error
